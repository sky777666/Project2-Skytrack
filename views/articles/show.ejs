
      <section class="comment">
            <h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>
            <p>
             <strong><%= moment(article.createdAt).calendar() %></strong>
            </p>
            <p><%= article.content %></p>
            <hr />
      </section>
        
<section id="comment">
  <% article.comments.forEach(comment => { %>
    <div class="well">
      <p><%= comment.content %></p>
    </div>
  <% }) %>  
</section>

<h1> Create a Comment ! </h1>

<h1>Please comment here. </h1>
<div class="login-page">
  <div class="form">
    <form action="/articles/<%= article.id %>/comment" method="POST">
      <div class="form-group">
        <label for="name"> Name</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>

      <div class="form-group">
        <label for="content">Comment</label>
        <input type="text" class="form-control" id="content" name="content" required>
      </div>


      <input type="submit" class="btn btn-primary" value="Speak it !">
    </form>
  </div>
</div>





