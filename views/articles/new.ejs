<h1>ISS SKY TRACKER JOURNAL & ARTICLES</h1>
<div class="login-page">
  <div class="form">
    <form  action="/articles" method="POST">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" required>
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        <select name="authorId" id="author" class="form-control" required>
          <% authors.forEach(function(author) { %>
            <option value="<%= author.id %>"><%= author.getFullName() %></option>    
          <% }) %>
        </select>
        <p>If your name doesn't show up, please <a href="/authors/new">sign up to be an author.</a></p>
      </div>
      <div class="form-group2">
        <label for="content">Content</label>
        <textarea type="text" class="form-control2" id="content" name="content" required></textarea>
      </div>
      <input type="submit" class="btn">
    </form> 
  </div>
</div>

